<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Input Data</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/toast.css" asp-append-version="true" />
</head>
<body class="dark-theme mobile-optimized">
    <div class="mobile-container">
        @RenderBody()
        
        <!-- Bottom Navigation -->
        <nav class="bottom-nav">
            <a href="@Url.Action("Index", "Home")" class="nav-item" title="Dashboard">
                <i class="bi bi-house-door"></i>
            </a>
            <a href="@Url.Action("Input", "Dimensi")" class="nav-item active" title="Input Data">
                <i class="bi bi-plus-circle-fill"></i>
            </a>
            <a href="@Url.Action("Riwayat", "Dimensi")" class="nav-item" title="Riwayat">
                <i class="bi bi-clock-history"></i>
            </a>
        </nav>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/toast.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
