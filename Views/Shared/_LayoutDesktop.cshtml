<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QC DIGITAL SYSTEM</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/desktop.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/toast.css" asp-append-version="true" />
</head>
<body class="desktop-view">
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <button class="btn-toggle-sidebar" id="toggleSidebar">
                <i class="bi bi-list"></i>
            </button>
            <h2 class="sidebar-title">QC SYSTEM</h2>
        </div>
        
        <nav class="sidebar-nav">
            <!-- Dashboard Menu with Submenu -->
            <div class="nav-item-group">
                <a href="#" class="nav-link has-submenu" id="dashboardMenu">
                    <i class="bi bi-house-door"></i>
                    <span>Dashboard</span>
                    <i class="bi bi-chevron-down submenu-arrow"></i>
                </a>
                <div class="submenu" id="dashboardSubmenu">
                    <a href="@Url.Action("Index", "Home")" class="nav-link submenu-item">
                        <i class="bi bi-speedometer2"></i>
                        <span>Dashboard</span>
                    </a>
                    @{
                        var sidebarRole = Context.Session.GetString("Role");
                    }
                    @if (sidebarRole == "Admin" || sidebarRole == "Quality" || sidebarRole == "User")
                    {
                        <a href="@Url.Action("Dashboard", "Rejection")" class="nav-link submenu-item">
                            <i class="bi bi-graph-up-arrow"></i>
                            <span>Dashboard Rejection ALL</span>
                        </a>
                        <a href="@Url.Action("DashboardHose", "Rejection")" class="nav-link submenu-item">
                            <i class="bi bi-diagram-3"></i>
                            <span>Dashboard HOSE</span>
                        </a>
                        <a href="@Url.Action("DashboardMolded", "Rejection")" class="nav-link submenu-item">
                            <i class="bi bi-box"></i>
                            <span>Dashboard MOLDED</span>
                        </a>
                        <a href="@Url.Action("DashboardRVI", "Rejection")" class="nav-link submenu-item">
                            <i class="bi bi-truck"></i>
                            <span>Dashboard RVI</span>
                        </a>
                        <a href="@Url.Action("DashboardBTR", "Rejection")" class="nav-link submenu-item">
                            <i class="bi bi-gear-wide-connected"></i>
                            <span>Dashboard BTR</span>
                        </a>
                    }
                </div>
            </div>
            
            <!-- Measurement Menu with Submenu -->
            <div class="nav-item-group">
                <a href="#" class="nav-link has-submenu" id="measurementMenu">
                    <i class="bi bi-rulers"></i>
                    <span>Measurement</span>
                    <i class="bi bi-chevron-down submenu-arrow"></i>
                </a>
                <div class="submenu" id="measurementSubmenu">
                    <a href="@Url.Action("Input", "Dimensi")" class="nav-link submenu-item">
                        <i class="bi bi-pencil-square"></i>
                        <span>Input Dimensi</span>
                    </a>
                    <a href="@Url.Action("Riwayat", "Dimensi")" class="nav-link submenu-item">
                        <i class="bi bi-clock-history"></i>
                        <span>Riwayat Input</span>
                    </a>
                    <a href="@Url.Action("Analisis", "Dimensi")" class="nav-link submenu-item">
                        <i class="bi bi-graph-up"></i>
                        <span>Analisis Trend</span>
                    </a>
                </div>
            </div>
            
            @if (sidebarRole == "Admin" || sidebarRole == "Quality" || sidebarRole == "User")
            {
                <!-- E_LWP Menu with Submenu -->
                <div class="nav-item-group">
                    <a href="#" class="nav-link has-submenu" id="elwpMenu">
                        <i class="bi bi-clipboard-check"></i>
                        <span>E_LWP</span>
                        <i class="bi bi-chevron-down submenu-arrow"></i>
                    </a>
                    <div class="submenu" id="elwpSubmenu">
                        <a href="@Url.Action("Create", "QCHose")" class="nav-link submenu-item">
                            <i class="bi bi-pencil-square"></i>
                            <span>INPUT E_LWP</span>
                        </a>
                        <a href="@Url.Action("List", "QCHose")" class="nav-link submenu-item">
                            <i class="bi bi-table"></i>
                            <span>DATA E_LWP</span>
                        </a>
                    </div>
                </div>
            }
            
            <a href="@Url.Action("Checking", "SOP")" class="nav-link">
                <i class="bi bi-camera-video"></i>
                <span>SOP Checking</span>
            </a>
            
            @if (Context.Session.GetString("Role") == "Admin")
            {
                <!-- Settings Menu with Submenu -->
                <div class="nav-item-group">
                    <a href="#" class="nav-link has-submenu" id="settingsMenu">
                        <i class="bi bi-gear"></i>
                        <span>Settings</span>
                        <i class="bi bi-chevron-down submenu-arrow"></i>
                    </a>
                    <div class="submenu" id="settingsSubmenu">
                        <a href="@Url.Action("Index", "Produk")" class="nav-link submenu-item">
                            <i class="bi bi-box-seam"></i>
                            <span>Master Produk</span>
                        </a>
                        <a href="@Url.Action("Index", "MasterData")" class="nav-link submenu-item">
                            <i class="bi bi-database"></i>
                            <span>Master Data</span>
                        </a>
                        <a href="@Url.Action("Index", "User")" class="nav-link submenu-item">
                    <i class="bi bi-people-fill"></i>
                    <span>User Management</span>
                </a>
                    </div>
                </div>
            }
        </nav>
        
        <div class="sidebar-footer">
            @{
                var username = Context.Session.GetString("Username");
                var namaLengkap = Context.Session.GetString("NamaLengkap");
                var role = Context.Session.GetString("Role");
            }
            
            @if (username != null)
            {
                <div class="user-info">
                    <i class="bi bi-person-circle"></i>
                    <div>
                        <div class="user-name">@namaLengkap</div>
                        <div class="user-role">@role</div>
                    </div>
                </div>
            }
            else
            {
                <div class="user-info">
                    <i class="bi bi-person-circle"></i>
                    <div>
                        <div class="user-name">Guest</div>
                        <div class="user-role">Not Logged In</div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content" id="mainContent">
        <!-- Sidebar Overlay for Mobile/Tablet -->
        <div class="sidebar-overlay" id="sidebarOverlay"></div>

        <!-- Top Bar -->
        <div class="top-bar">
            <div class="page-title-bar">
                <button class="btn-sidebar-mobile" id="btnSidebarMobile">
                    <i class="bi bi-list"></i>
                    <span>Menu</span>
                </button>
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="top-bar-actions" style="gap: 10px;">
                @{
                    var topUsername = Context.Session.GetString("Username");
                }
                
                <button id="btnRefresh" style="display: flex; align-items: center; gap: 8px; padding: 10px 20px; background: #dcfce7; color: #15803d; border: none; border-radius: 8px; font-weight: 600; transition: all 0.2s; cursor: pointer;">
                    <i class="bi bi-arrow-clockwise" style="font-size: 20px;"></i> <span>Refresh</span>
                </button>
                
                <button id="btnFullscreen" style="display: flex; align-items: center; gap: 8px; padding: 10px 20px; background: #e0f2fe; color: #0369a1; border: none; border-radius: 8px; font-weight: 600; transition: all 0.2s; cursor: pointer;">
                    <i class="bi bi-arrows-fullscreen" id="fullscreenIcon" style="font-size: 20px;"></i> <span id="fullscreenText">Fullscreen</span>
                </button>
                
                @if (topUsername != null)
                {
                    <div class="user-profile-container" style="position: relative; margin-right: 12px;">
                        <!-- User Profile Button -->
                        <button id="btnUserProfile" class="btn-user-profile" style="display: flex; align-items: center; gap: 8px; padding: 10px 16px; background: linear-gradient(135deg, #f3e8ff 0%, #dbeafe 100%); color: #1e40af; border: none; border-radius: 8px; font-weight: 600; transition: all 0.2s; cursor: pointer;">
                            <i class="bi bi-person-circle" style="font-size: 20px;"></i>
                            @{
                                var displayName = Context.Session.GetString("NamaLengkap") ?? topUsername;
                            }
                            <span class="user-name">@displayName</span>
                            <i class="bi bi-chevron-down" id="dropdownIcon" style="font-size: 12px; transition: transform 0.2s;"></i>
                        </button>

                        <!-- Dropdown Panel (Hidden by default) -->
                        <div id="userDropdown" class="user-dropdown" style="display: none; position: absolute; top: calc(100% + 8px); right: 0; width: 280px; background: white; border-radius: 12px; box-shadow: 0 10px 25px rgba(0,0,0,0.15); padding: 16px; z-index: 1000;">
                            @{
                                var userFullName = Context.Session.GetString("NamaLengkap") ?? topUsername;
                                var userRole = Context.Session.GetString("Role") ?? "User";
                                var userPlant = Context.Session.GetString("Plant") ?? "-";
                                var userGrup = Context.Session.GetString("Grup") ?? "-";
                            }
                            
                            <!-- User Avatar -->
                            <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 12px;">
                                <div style="width: 48px; height: 48px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-size: 24px; font-weight: bold;">
                                    @(!string.IsNullOrEmpty(userFullName) ? userFullName.Substring(0, 1).ToUpper() : "U")
                                </div>
                                <div>
                                    <div style="font-weight: 700; font-size: 16px; color: #1e293b;">@userFullName</div>
                                    <div style="font-size: 12px; color: #64748b;">@topUsername</div>
                                </div>
                            </div>

                            <!-- Divider -->
                            <div style="height: 1px; background: #e2e8f0; margin: 12px 0;"></div>

                            <!-- User Info -->
                            <div style="display: flex; flex-direction: column; gap: 8px; margin-bottom: 12px;">
                                <div style="display: flex; align-items: center; gap: 8px; font-size: 14px; color: #64748b;">
                                    <i class="bi bi-shield-check" style="font-size: 16px;"></i>
                                    <span>@userRole</span>
                                </div>
                                <div style="display: flex; align-items: center; gap: 8px; font-size: 14px; color: #64748b;">
                                    <i class="bi bi-building" style="font-size: 16px;"></i>
                                    <span>Plant: @userPlant</span>
                                </div>
                                <div style="display: flex; align-items: center; gap: 8px; font-size: 14px; color: #64748b;">
                                    <i class="bi bi-people" style="font-size: 16px;"></i>
                                    <span>Grup: @userGrup</span>
                                </div>
                            </div>

                            <!-- Divider -->
                            <div style="height: 1px; background: #e2e8f0; margin: 12px 0;"></div>

                            <!-- Logout Button -->
                            <a href="@Url.Action("Logout", "Auth")" style="display: flex; align-items: center; justify-content: center; gap: 8px; padding: 10px 16px; background: #fee2e2; color: #dc2626; border-radius: 8px; text-decoration: none; font-weight: 600; transition: all 0.2s; width: 100%;">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </a>
                        </div>
                    </div>
                }
                else
                {
                    <a href="@Url.Action("Login", "Auth")" style="display: flex; align-items: center; gap: 8px; padding: 10px 20px; background: #dbeafe; color: #1e40af; border-radius: 8px; text-decoration: none; font-weight: 600; transition: all 0.2s; margin-right: 12px;">
                        <i class="bi bi-box-arrow-in-right"></i> Login
                    </a>
                }
                
                <button class="btn-notification" style="position: relative; display: flex; align-items: center; justify-content: center; width: 48px; height: 48px; background: rgba(30, 41, 59, 0.6); backdrop-filter: blur(10px); color: #f59e0b; border: 1px solid rgba(148, 163, 184, 0.1); border-radius: 10px; cursor: pointer; transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1); box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.05);">
                    <i class="bi bi-bell" style="font-size: 20px;"></i>
                    <span class="badge" style="position: absolute; top: 4px; right: 4px; background: linear-gradient(135deg, #ef4444, #dc2626); color: white; border-radius: 12px; min-width: 22px; height: 18px; padding: 0 6px; font-size: 11px; display: flex; align-items: center; justify-content: center; font-weight: 700; box-shadow: 0 0 15px rgba(239, 68, 68, 0.5), 0 4px 8px rgba(0, 0, 0, 0.3); border: 2px solid rgba(255, 255, 255, 0.2); animation: pulse-badge 2s ease-in-out infinite;">3</span>
                </button>
            </div>
        </div>

        <!-- Content Area -->
        <div class="content-area">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://unpkg.com/quagga@0.12.1/dist/quagga.min.js"></script>
    <script src="~/js/desktop.js" asp-append-version="true"></script>
    
    <style>
        @@keyframes spin {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }
        
        @@keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .user-dropdown {
            animation: slideDown 0.2s ease-out;
        }


        .btn-user-profile:hover {
            background: linear-gradient(135deg, #e9d5ff 0%, #bfdbfe 100%) !important;
            box-shadow: 0 4px 12px rgba(30, 64, 175, 0.15);
        }
    </style>
    
    <script>
        // Wait for DOM to be fully loaded before attaching event listeners
        document.addEventListener('DOMContentLoaded', function() {
        // Refresh functionality
        const btnRefresh = document.getElementById('btnRefresh');
            if (btnRefresh) {
        btnRefresh.addEventListener('click', function() {
            // Add loading animation
            const icon = this.querySelector('i');
                    if (icon) {
            icon.style.animation = 'spin 1s linear infinite';
                    }
                    
                    // Check if current page is E_LWP Create page
                    const currentPath = window.location.pathname;
                    if (currentPath.includes('/QCHose/Create')) {
                        // Redirect to RefreshCreate endpoint to clear TempData
                        setTimeout(() => {
                            window.location.href = '/QCHose/RefreshCreate';
                        }, 300);
                    } else {
                        // Normal reload for other pages
            setTimeout(() => {
                location.reload();
            }, 300);
                    }
        });
            }
        
        // Fullscreen functionality
        const btnFullscreen = document.getElementById('btnFullscreen');
        const fullscreenIcon = document.getElementById('fullscreenIcon');
        const fullscreenText = document.getElementById('fullscreenText');

            if (btnFullscreen && fullscreenIcon && fullscreenText) {
        btnFullscreen.addEventListener('click', function() {
            if (!document.fullscreenElement) {
                // Enter fullscreen
                document.documentElement.requestFullscreen().then(() => {
                    fullscreenIcon.className = 'bi bi-fullscreen-exit';
                    fullscreenText.textContent = 'Exit Fullscreen';
                }).catch(err => {
                    console.error('Error entering fullscreen:', err);
                });
            } else {
                // Exit fullscreen
                if (document.exitFullscreen) {
                    document.exitFullscreen().then(() => {
                        fullscreenIcon.className = 'bi bi-arrows-fullscreen';
                        fullscreenText.textContent = 'Fullscreen';
                    });
                }
            }
        });
            }

        // Update button when fullscreen is exited via ESC key
        document.addEventListener('fullscreenchange', function() {
                const fullscreenIcon = document.getElementById('fullscreenIcon');
                const fullscreenText = document.getElementById('fullscreenText');
                
                if (fullscreenIcon && fullscreenText && !document.fullscreenElement) {
                fullscreenIcon.className = 'bi bi-arrows-fullscreen';
                fullscreenText.textContent = 'Fullscreen';
                }
            });

            // User Profile Dropdown functionality
            const btnUserProfile = document.getElementById('btnUserProfile');
            const userDropdown = document.getElementById('userDropdown');
            const dropdownIcon = document.getElementById('dropdownIcon');

            if (btnUserProfile && userDropdown) {
                // Toggle dropdown on button click
                btnUserProfile.addEventListener('click', function(e) {
                    e.stopPropagation();
                    const isVisible = userDropdown.style.display === 'block';
                    
                    if (isVisible) {
                        userDropdown.style.display = 'none';
                        if (dropdownIcon) {
                            dropdownIcon.style.transform = 'rotate(0deg)';
                        }
                    } else {
                        userDropdown.style.display = 'block';
                        if (dropdownIcon) {
                            dropdownIcon.style.transform = 'rotate(180deg)';
                        }
                    }
                });

                // Close dropdown when clicking outside
                document.addEventListener('click', function(e) {
                    if (!btnUserProfile.contains(e.target) && !userDropdown.contains(e.target)) {
                        userDropdown.style.display = 'none';
                        if (dropdownIcon) {
                            dropdownIcon.style.transform = 'rotate(0deg)';
                        }
                    }
                });

                // Close dropdown on logout click
                const logoutLink = userDropdown.querySelector('a[href*="Logout"]');
                if (logoutLink) {
                    logoutLink.addEventListener('click', function() {
                        userDropdown.style.display = 'none';
                    });
                }
            }
        });
    </script>
    
    <script src="~/js/toast.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
