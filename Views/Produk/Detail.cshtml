@model Produk
@{
    ViewData["Title"] = "Detail Produk - " + Model.NamaProduk;
    Layout = "_LayoutDesktop";
    var standarDimensi = ViewBag.StandarDimensi as List<StandarDimensi>;
}

<style>
    .detail-container {
        padding: 20px;
        max-width: 1400px;
        margin: 0 auto;
    }

    .detail-header {
        background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
        color: white;
        padding: 30px;
        border-radius: 16px;
        margin-bottom: 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }

    .header-info {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .header-icon {
        font-size: 64px;
        opacity: 0.9;
    }

    .header-text h1 {
        font-size: 32px;
        font-weight: 800;
        margin: 0 0 8px 0;
    }

    .header-text p {
        margin: 0;
        opacity: 0.9;
        font-size: 16px;
    }

    .header-actions {
        display: flex;
        gap: 12px;
    }

    .btn-header {
        padding: 12px 20px;
        border: 2px solid white;
        background: transparent;
        color: white;
        border-radius: 10px;
        font-weight: 700;
        cursor: pointer;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
    }

    .btn-header:hover {
        background: white;
        color: #1e293b;
    }

    .btn-edit-header {
        background: #10b981;
        border-color: #10b981;
    }

    .btn-edit-header:hover {
        background: #059669;
        border-color: #059669;
        color: white;
    }

    .detail-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        margin-bottom: 20px;
    }

    .info-card {
        background: white;
        padding: 25px;
        border-radius: 16px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        border-left: 4px solid #3b82f6;
    }

    .info-card-label {
        font-size: 12px;
        font-weight: 700;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 8px;
    }

    .info-card-value {
        font-size: 20px;
        font-weight: 700;
        color: #1e293b;
    }

    .dimensions-section {
        background: white;
        padding: 30px;
        border-radius: 16px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
    }

    .section-title {
        font-size: 20px;
        font-weight: 800;
        color: #1e293b;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .dimensions-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 10px;
    }

    .dimensions-table thead th {
        background: #1e293b;
        color: white;
        padding: 15px;
        text-align: left;
        font-weight: 700;
        text-transform: uppercase;
        font-size: 12px;
        letter-spacing: 0.5px;
    }

    .dimensions-table thead th:first-child {
        border-top-left-radius: 10px;
        border-bottom-left-radius: 10px;
    }

    .dimensions-table thead th:last-child {
        border-top-right-radius: 10px;
        border-bottom-right-radius: 10px;
    }

    .dimensions-table tbody tr {
        background: #f8fafc;
        transition: all 0.3s ease;
    }

    .dimensions-table tbody tr:hover {
        background: #eff6ff;
        transform: scale(1.01);
    }

    .dimensions-table tbody td {
        padding: 15px;
        font-weight: 600;
        color: #1e293b;
    }

    .dimensions-table tbody td:first-child {
        border-top-left-radius: 10px;
        border-bottom-left-radius: 10px;
        font-weight: 700;
        color: #3b82f6;
    }

    .dimensions-table tbody td:last-child {
        border-top-right-radius: 10px;
        border-bottom-right-radius: 10px;
    }

    .tolerance-badge {
        display: inline-block;
        padding: 4px 12px;
        background: #10b981;
        color: white;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 700;
    }

    .empty-message {
        text-align: center;
        padding: 60px;
        color: #94a3b8;
    }

    .empty-message i {
        font-size: 64px;
        margin-bottom: 20px;
        opacity: 0.5;
    }
</style>

<div class="detail-container">
    <!-- Header -->
    <div class="detail-header">
        <div class="header-info">
            <i class="bi bi-box-seam header-icon"></i>
            <div class="header-text">
                <h1>@Model.NamaProduk</h1>
                <p>
                    <i class="bi bi-person"></i> @(Model.Operator ?? "No Operator") • 
                    <i class="bi bi-calendar"></i> @Model.TanggalInput.ToString("dd MMMM yyyy")
                </p>
            </div>
        </div>
        <div class="header-actions">
            <a href="@Url.Action("Index", "Produk")" class="btn-header">
                <i class="bi bi-arrow-left"></i>
                Kembali
            </a>
            <a href="@Url.Action("Edit", "Produk", new { id = Model.Id })" class="btn-header btn-edit-header">
                <i class="bi bi-pencil"></i>
                Edit Produk
            </a>
        </div>
    </div>

    <!-- Product Information Grid -->
    <div class="detail-grid">
        <div class="info-card" style="border-left-color: #3b82f6;">
            <div class="info-card-label">Part Name</div>
            <div class="info-card-value">@Model.NamaProduk</div>
        </div>
        
        <div class="info-card" style="border-left-color: #8b5cf6;">
            <div class="info-card-label">Part No</div>
            <div class="info-card-value">@(Model.PartNo ?? "-")</div>
        </div>
        
        <div class="info-card" style="border-left-color: #10b981;">
            <div class="info-card-label">Part Code</div>
            <div class="info-card-value">@(Model.PartCode ?? "-")</div>
        </div>
        
        <div class="info-card" style="border-left-color: #f59e0b;">
            <div class="info-card-label">CT (Cycle Time)</div>
            <div class="info-card-value">@(Model.CT ?? "-") detik</div>
        </div>
        
        <div class="info-card" style="border-left-color: #ef4444;">
            <div class="info-card-label">Plant</div>
            <div class="info-card-value">@(Model.Plant ?? "-")</div>
        </div>
        
        <div class="info-card" style="border-left-color: #06b6d4;">
            <div class="info-card-label">Product ID</div>
            <div class="info-card-value">#@Model.Id</div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.IdentifikasiItem))
    {
        <div class="info-card" style="margin-bottom: 20px;">
            <div class="info-card-label">Identifikasi Item</div>
            <div class="info-card-value" style="font-size: 16px; line-height: 1.6;">@Model.IdentifikasiItem</div>
        </div>
    }

    <!-- Packing Information -->
    @if (!string.IsNullOrEmpty(Model.TypeBox) || Model.QtyPerBox.HasValue || !string.IsNullOrEmpty(Model.GambarPacking))
    {
        <div class="detail-grid">
            <div class="info-card" style="border-left-color: #ec4899;">
                <div class="info-card-label">Type Box</div>
                <div class="info-card-value">@(Model.TypeBox ?? "-")</div>
            </div>
            
            <div class="info-card" style="border-left-color: #f97316;">
                <div class="info-card-label">Qty / Box</div>
                <div class="info-card-value">@(Model.QtyPerBox?.ToString() ?? "-")</div>
            </div>
            
            <div class="info-card" style="border-left-color: #14b8a6;">
                <div class="info-card-label">Gambar Packing</div>
                <div class="info-card-value">
                    @if (!string.IsNullOrEmpty(Model.GambarPacking))
                    {
                        <a href="@Model.GambarPacking" target="_blank" style="color: #3b82f6;">
                            <i class="bi bi-image"></i> Lihat Gambar
                        </a>
                    }
                    else
                    {
                        <span>-</span>
                    }
                </div>
            </div>
        </div>
    }

    <!-- Video SOP -->
    @if (!string.IsNullOrEmpty(Model.VideoPath))
    {
        <div class="dimensions-section" style="margin-bottom: 20px;">
            <h2 class="section-title">
                <i class="bi bi-camera-video"></i>
                Video SOP
            </h2>
            <video controls style="width: 100%; max-height: 500px; border-radius: 10px;">
                <source src="@Model.VideoPath" type="video/mp4">
                Browser tidak mendukung video.
            </video>
        </div>
    }

    <!-- Dimensions -->
    <div class="dimensions-section">
        <h2 class="section-title">
            <i class="bi bi-rulers"></i>
            Standar Dimensi
        </h2>
        
        @if (standarDimensi != null && standarDimensi.Any())
        {
            <table class="dimensions-table">
                <thead>
                    <tr>
                        <th>Nama Dimensi</th>
                        <th>Min (mm)</th>
                        <th>Max (mm)</th>
                        <th>Tolerance</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var dimensi in standarDimensi)
                    {
                        <tr>
                            <td>@dimensi.NamaDimensi</td>
                            <td>
                                @* Sisi A *@
                                @if ((dimensi.InnerDiameter_SisiA_Min ?? 0) > 0)
                                {
                                    <span><strong>Sisi A:</strong></span><br/>
                                    <span>ID: @($"{dimensi.InnerDiameter_SisiA_Min:0.00}")</span><br/>
                                }
                                @if ((dimensi.OuterDiameter_SisiA_Min ?? 0) > 0)
                                {
                                    if ((dimensi.InnerDiameter_SisiA_Min ?? 0) == 0) { <span><strong>Sisi A:</strong></span><br/> }
                                    <span>OD: @($"{dimensi.OuterDiameter_SisiA_Min:0.00}")</span><br/>
                                }
                                @if ((dimensi.Thickness_SisiA_Min ?? 0) > 0)
                                {
                                    if ((dimensi.InnerDiameter_SisiA_Min ?? 0) == 0 && (dimensi.OuterDiameter_SisiA_Min ?? 0) == 0) { <span><strong>Sisi A:</strong></span><br/> }
                                    <span>T: @($"{dimensi.Thickness_SisiA_Min:0.00}")</span><br/>
                                }
                                
                                @* Sisi B *@
                                @if ((dimensi.InnerDiameter_SisiB_Min ?? 0) > 0)
                                {
                                    <span><strong>Sisi B:</strong></span><br/>
                                    <span>ID: @($"{dimensi.InnerDiameter_SisiB_Min:0.00}")</span><br/>
                                }
                                @if ((dimensi.OuterDiameter_SisiB_Min ?? 0) > 0)
                                {
                                    if ((dimensi.InnerDiameter_SisiB_Min ?? 0) == 0) { <span><strong>Sisi B:</strong></span><br/> }
                                    <span>OD: @($"{dimensi.OuterDiameter_SisiB_Min:0.00}")</span><br/>
                                }
                                @if ((dimensi.Thickness_SisiB_Min ?? 0) > 0)
                                {
                                    if ((dimensi.InnerDiameter_SisiB_Min ?? 0) == 0 && (dimensi.OuterDiameter_SisiB_Min ?? 0) == 0) { <span><strong>Sisi B:</strong></span><br/> }
                                    <span>T: @($"{dimensi.Thickness_SisiB_Min:0.00}")</span><br/>
                                }
                                
                                @* Dimensi Lainnya *@
                                @if ((dimensi.Panjang_Min ?? 0) > 0)
                                {
                                    <span>Panjang: @($"{dimensi.Panjang_Min:0.00}")</span><br/>
                                }
                                @if ((dimensi.Tinggi_Min ?? 0) > 0)
                                {
                                    <span>Tinggi: @($"{dimensi.Tinggi_Min:0.00}")</span><br/>
                                }
                                @if ((dimensi.Radius_Min ?? 0) > 0)
                                {
                                    <span>Radius: @($"{dimensi.Radius_Min:0.00}")</span>
                                }
                            </td>
                            <td>
                                @* Sisi A *@
                                @if ((dimensi.InnerDiameter_SisiA_Max ?? 0) > 0)
                                {
                                    <span><strong>Sisi A:</strong></span><br/>
                                    <span>ID: @($"{dimensi.InnerDiameter_SisiA_Max:0.00}")</span><br/>
                                }
                                @if ((dimensi.OuterDiameter_SisiA_Max ?? 0) > 0)
                                {
                                    if ((dimensi.InnerDiameter_SisiA_Max ?? 0) == 0) { <span><strong>Sisi A:</strong></span><br/> }
                                    <span>OD: @($"{dimensi.OuterDiameter_SisiA_Max:0.00}")</span><br/>
                                }
                                @if ((dimensi.Thickness_SisiA_Max ?? 0) > 0)
                                {
                                    if ((dimensi.InnerDiameter_SisiA_Max ?? 0) == 0 && (dimensi.OuterDiameter_SisiA_Max ?? 0) == 0) { <span><strong>Sisi A:</strong></span><br/> }
                                    <span>T: @($"{dimensi.Thickness_SisiA_Max:0.00}")</span><br/>
                                }
                                
                                @* Sisi B *@
                                @if ((dimensi.InnerDiameter_SisiB_Max ?? 0) > 0)
                                {
                                    <span><strong>Sisi B:</strong></span><br/>
                                    <span>ID: @($"{dimensi.InnerDiameter_SisiB_Max:0.00}")</span><br/>
                                }
                                @if ((dimensi.OuterDiameter_SisiB_Max ?? 0) > 0)
                                {
                                    if ((dimensi.InnerDiameter_SisiB_Max ?? 0) == 0) { <span><strong>Sisi B:</strong></span><br/> }
                                    <span>OD: @($"{dimensi.OuterDiameter_SisiB_Max:0.00}")</span><br/>
                                }
                                @if ((dimensi.Thickness_SisiB_Max ?? 0) > 0)
                                {
                                    if ((dimensi.InnerDiameter_SisiB_Max ?? 0) == 0 && (dimensi.OuterDiameter_SisiB_Max ?? 0) == 0) { <span><strong>Sisi B:</strong></span><br/> }
                                    <span>T: @($"{dimensi.Thickness_SisiB_Max:0.00}")</span><br/>
                                }
                                
                                @* Dimensi Lainnya *@
                                @if ((dimensi.Panjang_Max ?? 0) > 0)
                                {
                                    <span>Panjang: @($"{dimensi.Panjang_Max:0.00}")</span><br/>
                                }
                                @if ((dimensi.Tinggi_Max ?? 0) > 0)
                                {
                                    <span>Tinggi: @($"{dimensi.Tinggi_Max:0.00}")</span><br/>
                                }
                                @if ((dimensi.Radius_Max ?? 0) > 0)
                                {
                                    <span>Radius: @($"{dimensi.Radius_Max:0.00}")</span>
                                }
                            </td>
                            <td>
                                @{
                                    var maxTolerance = 0m;
                                    // Sisi A
                                    if ((dimensi.InnerDiameter_SisiA_Max ?? 0) > 0) maxTolerance = Math.Max(maxTolerance, (dimensi.InnerDiameter_SisiA_Max ?? 0) - (dimensi.InnerDiameter_SisiA_Min ?? 0));
                                    if ((dimensi.OuterDiameter_SisiA_Max ?? 0) > 0) maxTolerance = Math.Max(maxTolerance, (dimensi.OuterDiameter_SisiA_Max ?? 0) - (dimensi.OuterDiameter_SisiA_Min ?? 0));
                                    if ((dimensi.Thickness_SisiA_Max ?? 0) > 0) maxTolerance = Math.Max(maxTolerance, (dimensi.Thickness_SisiA_Max ?? 0) - (dimensi.Thickness_SisiA_Min ?? 0));
                                    // Sisi B
                                    if ((dimensi.InnerDiameter_SisiB_Max ?? 0) > 0) maxTolerance = Math.Max(maxTolerance, (dimensi.InnerDiameter_SisiB_Max ?? 0) - (dimensi.InnerDiameter_SisiB_Min ?? 0));
                                    if ((dimensi.OuterDiameter_SisiB_Max ?? 0) > 0) maxTolerance = Math.Max(maxTolerance, (dimensi.OuterDiameter_SisiB_Max ?? 0) - (dimensi.OuterDiameter_SisiB_Min ?? 0));
                                    if ((dimensi.Thickness_SisiB_Max ?? 0) > 0) maxTolerance = Math.Max(maxTolerance, (dimensi.Thickness_SisiB_Max ?? 0) - (dimensi.Thickness_SisiB_Min ?? 0));
                                    // Lainnya
                                    if ((dimensi.Panjang_Max ?? 0) > 0) maxTolerance = Math.Max(maxTolerance, (dimensi.Panjang_Max ?? 0) - (dimensi.Panjang_Min ?? 0));
                                    if ((dimensi.Tinggi_Max ?? 0) > 0) maxTolerance = Math.Max(maxTolerance, (dimensi.Tinggi_Max ?? 0) - (dimensi.Tinggi_Min ?? 0));
                                    if ((dimensi.Radius_Max ?? 0) > 0) maxTolerance = Math.Max(maxTolerance, (dimensi.Radius_Max ?? 0) - (dimensi.Radius_Min ?? 0));
                                }
                                <span class="tolerance-badge">
                                    ± @($"{maxTolerance:0.00}") mm
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="empty-message">
                <i class="bi bi-rulers"></i>
                <h3>Belum Ada Standar Dimensi</h3>
                <p>Silakan tambahkan standar dimensi untuk produk ini</p>
            </div>
        }
    </div>
</div>
