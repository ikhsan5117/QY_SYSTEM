@model Produk
@{
    ViewData["Title"] = "Edit Produk";
    Layout = "_LayoutDesktop";
}

<style>
    .edit-container {
        padding: 20px;
        max-width: 1400px;
        margin: 0 auto;
    }

    .page-header {
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        color: white;
        padding: 30px;
        border-radius: 16px;
        margin-bottom: 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }

    .header-title {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .header-title i {
        font-size: 48px;
    }

    .header-title h1 {
        font-size: 28px;
        font-weight: 800;
        margin: 0;
    }

    .btn-back {
        padding: 12px 20px;
        background: white;
        color: #f59e0b;
        border: none;
        border-radius: 10px;
        font-weight: 700;
        cursor: pointer;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
    }

    .btn-back:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.2);
        color: #f59e0b;
    }

    .form-sections {
        display: grid;
        gap: 20px;
    }

    .form-section {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        overflow: hidden;
    }

    .section-header {
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        color: white;
        padding: 20px 30px;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .section-header i {
        font-size: 24px;
    }

    .section-header h2 {
        font-size: 18px;
        font-weight: 700;
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .section-body {
        padding: 30px;
    }

    .form-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .form-group label {
        font-size: 14px;
        font-weight: 700;
        color: #1e293b;
    }

    .required {
        color: #ef4444;
        margin-left: 4px;
    }

    .form-control {
        padding: 12px 16px;
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        font-size: 15px;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        outline: none;
        border-color: #f59e0b;
        box-shadow: 0 0 0 4px rgba(245, 158, 11, 0.1);
    }

    select.form-control {
        cursor: pointer;
        background-color: white;
    }

    .form-actions {
        display: flex;
        gap: 12px;
        justify-content: flex-end;
        margin-top: 30px;
        padding-top: 30px;
        border-top: 2px solid #e2e8f0;
    }

    .btn {
        padding: 14px 32px;
        border: none;
        border-radius: 10px;
        font-size: 16px;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
    }

    .btn-primary {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(16, 185, 129, 0.4);
    }

    .btn-secondary {
        background: #e2e8f0;
        color: #64748b;
    }

    .btn-secondary:hover {
        background: #cbd5e1;
        color: #475569;
    }

    .alert {
        padding: 15px 20px;
        border-radius: 10px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
        font-weight: 600;
    }

    .alert-info {
        background: #dbeafe;
        color: #1e40af;
        border-left: 4px solid #3b82f6;
    }

    textarea.form-control {
        resize: vertical;
        min-height: 80px;
    }

    .upload-area {
        border: 3px dashed #cbd5e1;
        border-radius: 12px;
        padding: 30px;
        text-align: center;
        background: #f8fafc;
        transition: all 0.3s ease;
        cursor: pointer;
        position: relative;
        margin-top: 15px;
    }

    .upload-area:hover {
        border-color: #3b82f6;
        background: #eff6ff;
    }

    .upload-area i {
        font-size: 36px;
        color: #94a3b8;
        margin-bottom: 10px;
    }

    .upload-area h4 {
        font-size: 14px;
        color: #1e293b;
        margin-bottom: 5px;
        font-weight: 700;
    }

    .upload-area p {
        font-size: 12px;
        color: #64748b;
        margin: 0;
    }

    .upload-area input[type="file"] {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        cursor: pointer;
    }

    .current-file {
        margin-top: 15px;
        padding: 15px;
        background: #f8fafc;
        border-radius: 10px;
        border: 2px solid #e2e8f0;
    }

    .current-file-label {
        font-size: 14px;
        font-weight: 700;
        color: #1e293b;
        display: block;
        margin-bottom: 10px;
    }

    .current-file img {
        max-width: 300px;
        border-radius: 10px;
        border: 2px solid #e2e8f0;
    }

    .file-preview {
        margin-top: 10px;
        padding: 10px;
        background: #f0fdf4;
        border-radius: 8px;
        border: 2px solid #86efac;
        display: none;
    }

    .file-preview.show {
        display: block;
    }

    .file-preview-name {
        font-size: 13px;
        font-weight: 600;
        color: #166534;
        margin-bottom: 5px;
    }

    .file-preview-size {
        font-size: 12px;
        color: #16a34a;
    }

    /* Progress Bar Styles */
    .progress-container {
        margin-top: 10px;
    }

    .progress-bar-wrapper {
        width: 100%;
        height: 8px;
        background: #e2e8f0;
        border-radius: 10px;
        overflow: hidden;
        margin-bottom: 8px;
    }

    .progress-bar {
        height: 100%;
        background: linear-gradient(90deg, #3b82f6 0%, #06b6d4 100%);
        border-radius: 10px;
        transition: width 0.3s ease;
        width: 0%;
    }

    .progress-text {
        font-size: 12px;
        font-weight: 600;
        color: #3b82f6;
        text-align: center;
    }

    .upload-success {
        color: #10b981;
    }

    .upload-success i {
        font-size: 14px;
    }
</style>

<div class="edit-container">
    <!-- Header -->
    <div class="page-header">
        <div class="header-title">
            <i class="bi bi-pencil-square"></i>
            <h1>Edit Produk</h1>
        </div>
        <a href="@Url.Action("Index", "Produk")" class="btn-back">
            <i class="bi bi-arrow-left"></i>
            Kembali
        </a>
    </div>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="TanggalInput" />
        <input type="hidden" asp-for="VideoPath" />
        <input type="hidden" asp-for="GambarPacking" />
        <input type="hidden" asp-for="GambarCF" />
        
        <div class="form-sections">
            
            <!-- Section 1: Informasi Produk -->
            <div class="form-section">
                <div class="section-header">
                    <i class="bi bi-info-circle"></i>
                    <h2>Informasi Produk</h2>
                </div>
                <div class="section-body">
                    <div class="alert alert-info">
                        <i class="bi bi-lightbulb"></i>
                        <span>Field yang ditandai dengan <span style="color: #ef4444;">*</span> wajib diisi</span>
                    </div>
                    
                    <div class="form-grid">
                        <div class="form-group">
                            <label>
                                Part Name <span class="required">*</span>
                            </label>
                            <input type="text" 
                                   class="form-control" 
                                   asp-for="NamaProduk" 
                                   placeholder="Masukkan nama part..."
                                   required>
                            <span asp-validation-for="NamaProduk" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Part No</label>
                            <input type="text" 
                                   class="form-control" 
                                   asp-for="PartNo" 
                                   placeholder="Masukkan part number...">
                        </div>

                        <div class="form-group">
                            <label>Part Code</label>
                            <input type="text" 
                                   class="form-control" 
                                   asp-for="PartCode" 
                                   placeholder="Masukkan part code...">
                        </div>

                        <div class="form-group">
                            <label>CT (Cycle Time) - detik</label>
                            <input type="text" 
                                   class="form-control" 
                                   asp-for="CT" 
                                   placeholder="Contoh: 60">
                        </div>

                        <div class="form-group">
                            <label>Plant</label>
                            <select class="form-control" asp-for="Plant">
                                <option value="">-- Pilih Plant --</option>
                                <option value="BTR">BTR</option>
                                <option value="MOLDED">MOLDED</option>
                                <option value="HOSE">HOSE</option>
                                <option value="RVI">RVI</option>
                                <option value="MIXING">MIXING</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Identifikasi Item</label>
                            <select class="form-control" asp-for="IdentifikasiItem">
                                <option value="">-- Pilih Identifikasi --</option>
                                <option value="Delta S">Delta S</option>
                                <option value="Delta R">Delta R</option>
                                <option value="Function">Function</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label>
                                Operator / PIC <span class="required">*</span>
                            </label>
                            <input type="text" 
                                   class="form-control" 
                                   asp-for="Operator" 
                                   placeholder="Masukkan nama operator..."
                                   required>
                            <span asp-validation-for="Operator" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Section 2: Checking Fixture -->
            <div class="form-section">
                <div class="section-header" style="background: linear-gradient(135deg, #ec4899 0%, #db2777 100%);">
                    <i class="bi bi-clipboard-check"></i>
                    <h2>Standar Checking Fixture</h2>
                </div>
                <div class="section-body">
                    <div class="form-group">
                        <label>Standar C/F</label>
                        <textarea class="form-control" 
                                  asp-for="StandarCF" 
                                  rows="3" 
                                  placeholder="Masukkan standar checking fixture..."></textarea>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.GambarCF))
                    {
                        <div class="current-file">
                            <label class="current-file-label">Gambar C/F Saat Ini:</label>
                            <img src="@Model.GambarCF" alt="Checking Fixture" />
                        </div>
                    }

                    <div class="form-group">
                        <label>Update Gambar C/F (Opsional)</label>
                        <div class="upload-area" id="cfUploadArea">
                            <input type="file" 
                                   name="GambarCFFile" 
                                   id="gambarCFFile" 
                                   accept="image/*"
                                   onchange="handleFileSelect(event, 'cf')">
                            <i class="bi bi-image"></i>
                            <h4>Upload Gambar Baru</h4>
                            <p>Format: JPG, PNG • Max 5MB</p>
                        </div>
                        <div class="file-preview" id="cfPreview">
                            <div class="file-preview-name" id="cfFileName"></div>
                            <div class="file-preview-size" id="cfFileSize"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Section 3: Packing -->
            <div class="form-section">
                <div class="section-header" style="background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);">
                    <i class="bi bi-box"></i>
                    <h2>Informasi Packing</h2>
                </div>
                <div class="section-body">
                    <div class="form-grid">
                        <div class="form-group">
                            <label>Type Box</label>
                            <input type="text" 
                                   class="form-control" 
                                   asp-for="TypeBox" 
                                   placeholder="Contoh: Carton A">
                        </div>

                        <div class="form-group">
                            <label>Qty / Box</label>
                            <input type="number" 
                                   class="form-control" 
                                   asp-for="QtyPerBox" 
                                   placeholder="Contoh: 100">
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.GambarPacking))
                    {
                        <div class="current-file">
                            <label class="current-file-label">Gambar Packing Saat Ini:</label>
                            <img src="@Model.GambarPacking" alt="Packing" />
                        </div>
                    }

                    <div class="form-group">
                        <label>Update Gambar Packing (Opsional)</label>
                        <div class="upload-area" id="packingUploadArea">
                            <input type="file" 
                                   name="GambarPackingFile" 
                                   id="gambarPackingFile" 
                                   accept="image/*"
                                   onchange="handleFileSelect(event, 'packing')">
                            <i class="bi bi-image"></i>
                            <h4>Upload Gambar Baru</h4>
                            <p>Format: JPG, PNG • Max 5MB</p>
                        </div>
                        <div class="file-preview" id="packingPreview">
                            <div class="file-preview-name" id="packingFileName"></div>
                            <div class="file-preview-size" id="packingFileSize"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Section 4: Video SOP -->
            <div class="form-section">
                <div class="section-header" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">
                    <i class="bi bi-camera-video"></i>
                    <h2>Video SOP Checking</h2>
                </div>
                <div class="section-body">
                    @if (!string.IsNullOrEmpty(Model.VideoPath))
                    {
                        <div class="current-file">
                            <label class="current-file-label">Video Saat Ini:</label>
                            <video width="400" controls style="border-radius: 10px; border: 2px solid #e2e8f0;">
                                <source src="@Model.VideoPath" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        </div>
                    }

                    <div class="form-group">
                        <label>Update Video SOP (Opsional)</label>
                        <div class="upload-area" id="videoUploadArea">
                            <input type="file" 
                                   name="VideoFile" 
                                   id="videoFile" 
                                   accept="video/*"
                                   onchange="handleFileSelect(event, 'video')">
                            <i class="bi bi-camera-video"></i>
                            <h4>Upload Video Baru</h4>
                            <p>Format: MP4, AVI, MOV • Max 500MB</p>
                        </div>
                        <div class="file-preview" id="videoPreview">
                            <div class="file-preview-name" id="videoFileName"></div>
                            <div class="file-preview-size" id="videoFileSize"></div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <!-- Form Actions -->
        <div class="form-actions">
            <a href="@Url.Action("Index", "Produk")" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i>
                Batal
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle"></i>
                Update Produk
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
    function handleFileSelect(event, type) {
        const file = event.target.files[0];
        if (!file) return;

        const previewId = type + 'Preview';
        const fileNameId = type + 'FileName';
        const fileSizeId = type + 'FileSize';

        // Show preview
        const previewElement = document.getElementById(previewId);
        previewElement.classList.add('show');
        document.getElementById(fileNameId).textContent = '✓ File dipilih: ' + file.name;
        document.getElementById(fileSizeId).textContent = 'Ukuran: ' + formatFileSize(file.size);

        // Create progress bar if doesn't exist
        let progressContainer = previewElement.querySelector('.progress-container');
        if (!progressContainer) {
            progressContainer = document.createElement('div');
            progressContainer.className = 'progress-container';
            progressContainer.innerHTML = `
                <div class="progress-bar-wrapper">
                    <div class="progress-bar" id="${type}ProgressBar" style="width: 0%"></div>
                </div>
                <div class="progress-text" id="${type}ProgressText">Preparing...</div>
            `;
            previewElement.appendChild(progressContainer);
        }

        // Simulate upload progress
        simulateProgress(type);
    }

    function simulateProgress(type) {
        const progressBar = document.getElementById(type + 'ProgressBar');
        const progressText = document.getElementById(type + 'ProgressText');
        let progress = 0;

        const interval = setInterval(() => {
            progress += Math.random() * 15;
            if (progress >= 100) {
                progress = 100;
                clearInterval(interval);
                progressBar.style.width = '100%';
                progressText.innerHTML = '<span class="upload-success"><i class="bi bi-check-circle"></i> Siap diupload</span>';
            } else {
                progressBar.style.width = progress + '%';
                progressText.textContent = Math.round(progress) + '%';
            }
        }, 200);
    }

    function formatFileSize(bytes) {
        if (bytes === 0) return '0 Bytes';
        const k = 1024;
        const sizes = ['Bytes', 'KB', 'MB', 'GB'];
        const i = Math.floor(Math.log(bytes) / Math.log(k));
        return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
    }
    </script>
}
