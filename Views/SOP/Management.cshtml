@{
    ViewData["Title"] = "Management SOP";
    Layout = "~/Views/Shared/_LayoutDesktop.cshtml";
}

<style>
    .management-container {
        padding: 30px;
        max-width: 1400px;
        margin: 0 auto;
    }

    .management-header {
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        color: white;
        padding: 30px;
        border-radius: 16px;
        margin-bottom: 30px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }

    .management-header h1 {
        font-size: 32px;
        font-weight: 800;
        margin: 0 0 10px 0;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .coming-soon {
        background: white;
        border-radius: 16px;
        padding: 80px 40px;
        text-align: center;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
    }

    .coming-soon i {
        font-size: 100px;
        color: #f59e0b;
        margin-bottom: 30px;
    }

    .coming-soon h2 {
        font-size: 36px;
        font-weight: 800;
        color: #1e293b;
        margin-bottom: 15px;
    }

    .coming-soon p {
        font-size: 18px;
        color: #64748b;
        max-width: 600px;
        margin: 0 auto 30px;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 40px;
    }

    .feature-card {
        background: #f8fafc;
        padding: 25px;
        border-radius: 12px;
        text-align: center;
    }

    .feature-card i {
        font-size: 40px;
        color: #f59e0b;
        margin-bottom: 15px;
    }

    .feature-card h4 {
        font-size: 18px;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 10px;
    }

    .feature-card p {
        font-size: 14px;
        color: #64748b;
        margin: 0;
    }
</style>

<div class="management-container">
    <div class="management-header">
        <h1>
            <i class="bi bi-gear"></i>
            MANAGEMENT SOP
        </h1>
        <p>Manage SOP videos, documents, and configurations</p>
    </div>

    <div class="coming-soon">
        <i class="bi bi-tools"></i>
        <h2>Coming Soon</h2>
        <p>SOP Management features are currently under development. This module will allow administrators to upload, edit, and manage SOP videos and documentation.</p>

        <div class="features-grid">
            <div class="feature-card">
                <i class="bi bi-camera-video"></i>
                <h4>Video Upload</h4>
                <p>Upload and manage SOP instructional videos</p>
            </div>
            <div class="feature-card">
                <i class="bi bi-file-earmark-text"></i>
                <h4>Document Management</h4>
                <p>Create and edit SOP documentation</p>
            </div>
            <div class="feature-card">
                <i class="bi bi-diagram-3"></i>
                <h4>Step Configuration</h4>
                <p>Define verification steps and checkpoints</p>
            </div>
            <div class="feature-card">
                <i class="bi bi-graph-up"></i>
                <h4>Analytics</h4>
                <p>Track SOP completion and compliance</p>
            </div>
        </div>
    </div>
</div>
