@model List<User>
@{
    ViewData["Title"] = "Management User";
    Layout = "_LayoutDesktop";
}

<style>
    body {
        background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #334155 100%);
        background-attachment: fixed;
        min-height: 100vh;
        position: relative;
    }

    body::before {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: 
            radial-gradient(circle at 20% 30%, rgba(59, 130, 246, 0.1) 0%, transparent 50%),
            radial-gradient(circle at 80% 70%, rgba(139, 92, 246, 0.1) 0%, transparent 50%),
            radial-gradient(circle at 50% 50%, rgba(236, 72, 153, 0.05) 0%, transparent 50%);
        pointer-events: none;
        z-index: 0;
    }

    .content-area {
        position: relative;
        z-index: 1;
    }

    .status-badge {
        padding: 6px 12px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 600;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .status-active {
        background: linear-gradient(135deg, rgba(34, 197, 94, 0.9), rgba(22, 163, 74, 0.95));
        color: #dcfce7;
        box-shadow: 
            0 2px 8px rgba(21, 128, 61, 0.3),
            0 0 15px rgba(34, 197, 94, 0.2);
    }
    
    .status-inactive {
        background: linear-gradient(135deg, rgba(239, 68, 68, 0.9), rgba(220, 38, 38, 0.95));
        color: #fee2e2;
        box-shadow: 
            0 2px 8px rgba(220, 38, 38, 0.3),
            0 0 15px rgba(239, 68, 68, 0.2);
    }
    
    .role-badge {
        padding: 6px 12px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 600;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .role-admin {
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.9), rgba(37, 99, 235, 0.95));
        color: #dbeafe;
        box-shadow: 
            0 2px 8px rgba(30, 64, 175, 0.3),
            0 0 15px rgba(59, 130, 246, 0.2);
    }
    
    .role-user {
        background: linear-gradient(135deg, rgba(139, 92, 246, 0.9), rgba(124, 58, 237, 0.95));
        color: #ede9fe;
        box-shadow: 
            0 2px 8px rgba(107, 33, 168, 0.3),
            0 0 15px rgba(139, 92, 246, 0.2);
    }

    .user-header {
        background: linear-gradient(135deg, rgba(30, 41, 59, 0.95), rgba(15, 23, 42, 0.98));
        backdrop-filter: blur(20px) saturate(180%);
        border-radius: 16px;
        padding: 24px;
        margin-bottom: 24px;
        border: 1px solid rgba(148, 163, 184, 0.2);
        box-shadow: 
            0 20px 60px rgba(0, 0, 0, 0.4),
            0 0 40px rgba(59, 130, 246, 0.1),
            inset 0 1px 0 rgba(255, 255, 255, 0.1);
    }

    .user-title {
        background: linear-gradient(135deg, #f1f5f9 0%, #cbd5e1 50%, #3b82f6 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        filter: drop-shadow(0 0 10px rgba(59, 130, 246, 0.3));
    }

    .user-subtitle {
        color: #94a3b8;
    }

    .user-icon {
        color: #3b82f6;
        filter: drop-shadow(0 0 8px rgba(59, 130, 246, 0.5));
    }

    .filter-container {
        background: linear-gradient(135deg, rgba(30, 41, 59, 0.8), rgba(15, 23, 42, 0.9));
        backdrop-filter: blur(20px) saturate(180%);
        border: 1px solid rgba(148, 163, 184, 0.2);
        border-radius: 12px;
        padding: 16px;
        margin-bottom: 20px;
        box-shadow: 
            0 10px 30px rgba(0, 0, 0, 0.3),
            0 0 20px rgba(59, 130, 246, 0.1),
            inset 0 1px 0 rgba(255, 255, 255, 0.1);
    }

    .search-bar-desktop input,
    .form-control-desktop {
        background: rgba(15, 23, 42, 0.6);
        backdrop-filter: blur(10px);
        border: 2px solid rgba(148, 163, 184, 0.2);
        color: #f1f5f9;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .search-bar-desktop input:focus,
    .form-control-desktop:focus {
        outline: none;
        border-color: #3b82f6;
        box-shadow: 
            0 0 0 3px rgba(59, 130, 246, 0.2),
            0 0 20px rgba(59, 130, 246, 0.3);
        background: rgba(15, 23, 42, 0.8);
    }

    .search-bar-desktop input::placeholder {
        color: #64748b;
    }

    .search-bar-desktop i {
        color: #94a3b8;
    }

    .form-control-desktop option {
        background: #1e293b;
        color: #f1f5f9;
    }

    .table-container {
        background: linear-gradient(135deg, rgba(30, 41, 59, 0.95), rgba(15, 23, 42, 0.98));
        backdrop-filter: blur(20px) saturate(180%);
        border: 1px solid rgba(148, 163, 184, 0.2);
        border-radius: 12px;
        box-shadow: 
            0 20px 60px rgba(0, 0, 0, 0.4),
            0 0 40px rgba(59, 130, 246, 0.1),
            inset 0 1px 0 rgba(255, 255, 255, 0.1);
        max-height: calc(100vh - 320px);
        overflow-y: auto;
    }

    .table-desktop thead tr {
        background: linear-gradient(135deg, #2563eb 0%, #3b82f6 50%, #8b5cf6 100%) !important;
        backdrop-filter: blur(10px);
        box-shadow: 
            0 4px 16px rgba(37, 99, 235, 0.4),
            0 0 20px rgba(59, 130, 246, 0.3);
        border-bottom: 2px solid rgba(148, 163, 184, 0.2);
    }

    .table-desktop thead th {
        background: transparent !important;
        color: white !important;
        text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
    }

    .table-desktop tbody tr {
        background: rgba(30, 41, 59, 0.4);
        color: #f1f5f9;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .table-desktop tbody tr:nth-child(even) {
        background: rgba(15, 23, 42, 0.5);
    }

    .table-desktop tbody tr:hover {
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.15), rgba(99, 102, 241, 0.1));
        box-shadow: 
            inset 0 0 0 0.5px rgba(96, 165, 250, 0.2),
            0 2px 12px rgba(59, 130, 246, 0.2);
    }

    .table-desktop tbody td {
        color: #f1f5f9;
        border-bottom: 1px solid rgba(148, 163, 184, 0.1);
    }

    .table-desktop tbody .text-muted,
    .table-desktop tbody .text-secondary {
        color: #94a3b8 !important;
    }

    .user-avatar {
        box-shadow: 
            0 4px 12px rgba(102, 126, 234, 0.4),
            0 0 20px rgba(118, 75, 162, 0.3);
    }

    .username-text {
        color: #f1f5f9 !important;
    }

    .user-id-text {
        color: #94a3b8 !important;
    }

    .nama-text {
        color: #f1f5f9 !important;
    }

    .plant-text {
        color: #cbd5e1 !important;
    }

    .date-text {
        color: #94a3b8 !important;
    }

    .empty-table {
        color: #94a3b8 !important;
    }

    .empty-table i {
        color: #64748b;
        filter: drop-shadow(0 0 10px rgba(100, 116, 139, 0.3));
    }

    /* Modal Styling */
    .modal-content {
        background: linear-gradient(135deg, rgba(30, 41, 59, 0.95), rgba(15, 23, 42, 0.98)) !important;
        backdrop-filter: blur(20px) saturate(180%) !important;
        border: 1px solid rgba(148, 163, 184, 0.2) !important;
        box-shadow: 
            0 20px 60px rgba(0, 0, 0, 0.5),
            0 0 40px rgba(59, 130, 246, 0.2),
            inset 0 1px 0 rgba(255, 255, 255, 0.1) !important;
    }

    .modal-header {
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 50%, #1d4ed8 100%) !important;
        box-shadow: 
            0 4px 16px rgba(37, 99, 235, 0.4),
            0 0 20px rgba(59, 130, 246, 0.3) !important;
        border-bottom: 1px solid rgba(148, 163, 184, 0.2) !important;
    }

    .modal-title {
        color: white !important;
        text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
    }

    .modal-body {
        color: #f1f5f9;
    }

    .modal-body .form-label {
        color: #cbd5e1 !important;
    }

    .modal-body .form-control,
    .modal-body input[type="text"],
    .modal-body input[type="password"],
    .modal-body select {
        background: rgba(15, 23, 42, 0.6) !important;
        backdrop-filter: blur(10px);
        border: 2px solid rgba(148, 163, 184, 0.2) !important;
        color: #f1f5f9 !important;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .modal-body .form-control:focus,
    .modal-body input[type="text"]:focus,
    .modal-body input[type="password"]:focus,
    .modal-body select:focus {
        outline: none !important;
        border-color: #3b82f6 !important;
        box-shadow: 
            0 0 0 3px rgba(59, 130, 246, 0.2),
            0 0 20px rgba(59, 130, 246, 0.3) !important;
        background: rgba(15, 23, 42, 0.8) !important;
    }

    .modal-body .form-control::placeholder {
        color: #64748b !important;
    }

    .modal-body select option {
        background: #1e293b !important;
        color: #f1f5f9 !important;
    }

    .modal-body small {
        color: #94a3b8 !important;
    }

    .modal-body label[style*="cursor: pointer"] {
        color: #cbd5e1 !important;
    }

    .modal-footer {
        border-top: 2px solid rgba(148, 163, 184, 0.2) !important;
    }

    .btn-secondary {
        background: rgba(30, 41, 59, 0.6) !important;
        backdrop-filter: blur(10px);
        color: #cbd5e1 !important;
        border: 2px solid rgba(148, 163, 184, 0.2) !important;
    }

    .btn-secondary:hover {
        background: rgba(30, 41, 59, 0.8) !important;
        border-color: rgba(148, 163, 184, 0.4) !important;
        color: #f1f5f9 !important;
    }

    .btn-primary {
        background: linear-gradient(135deg, #3b82f6, #2563eb) !important;
        box-shadow: 
            0 4px 12px rgba(59, 130, 246, 0.3),
            0 0 20px rgba(59, 130, 246, 0.1) !important;
        border: 1px solid rgba(255, 255, 255, 0.1) !important;
    }

    .btn-primary:hover {
        box-shadow: 
            0 6px 20px rgba(59, 130, 246, 0.5),
            0 0 30px rgba(59, 130, 246, 0.2) !important;
    }
</style>

<div class="row g-4">
    <div class="col-12">
        <!-- Header -->
        <div class="user-header" style="display: flex; justify-content: space-between; align-items: center;">
            <div style="display: flex; align-items: center; gap: 12px;">
                <i class="bi bi-people-fill user-icon" style="font-size: 28px;"></i>
                <div>
                    <h2 class="user-title" style="margin: 0; font-size: 24px; font-weight: 700;">Management User</h2>
                    <p class="user-subtitle" style="margin: 0; font-size: 14px;">Kelola akun pengguna sistem</p>
                </div>
            </div>
            <div style="display: flex; gap: 12px;">
                <button type="button" class="btn-secondary-desktop" onclick="confirmSeedUsers()">
                    <i class="bi bi-people"></i> Seed 40 Users Template
                </button>
                <button type="button" class="btn-primary-desktop" data-bs-toggle="modal" data-bs-target="#createUserModal">
                    <i class="bi bi-plus-circle"></i> Tambah User Baru
                </button>
            </div>
        </div>

        <!-- Filter & Search -->
        <div class="filter-container">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="search-bar-desktop">
                        <i class="bi bi-search"></i>
                        <input type="text" placeholder="Cari user..." id="searchInput" />
                    </div>
                </div>
                <div class="col-md-3">
                    <select id="roleFilter" class="form-control-desktop">
                        <option value="">Semua Role</option>
                        <option value="Admin">Admin</option>
                        <option value="User">User</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select id="statusFilter" class="form-control-desktop">
                        <option value="">Semua Status</option>
                        <option value="true">Aktif</option>
                        <option value="false">Nonaktif</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- User Table -->
        <div class="table-container">
            <table class="table-desktop" id="userTable" style="margin: 0;">
                <thead style="position: sticky; top: 0; z-index: 10;">
                    <tr>
                        <th style="width: 50px; text-align: center;">No</th>
                        <th>Username</th>
                        <th>Nama Lengkap</th>
                        <th style="text-align: center;">Role</th>
                        <th>Plant / Grup</th>
                        <th style="text-align: center;">Status</th>
                        <th style="text-align: center;">Tanggal Dibuat</th>
                        <th style="width: 120px; text-align: center;">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="8" class="empty-table" style="text-align: center; padding: 60px 20px;">
                                <i class="bi bi-inbox" style="font-size: 48px; display: block; margin-bottom: 12px;"></i>
                                <p style="margin: 0; font-weight: 600;">Belum ada data user</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        var no = 1;
                        foreach (var user in Model)
                        {
                            <tr class="user-row" 
                                data-role="@user.Role" 
                                data-status="@user.IsActive.ToString().ToLower()">
                                <td style="text-align: center; font-weight: 600; color: #94a3b8;">@no</td>
                                <td>
                                    <div style="display: flex; align-items: center; gap: 10px;">
                                        <div class="user-avatar" style="width: 40px; height: 40px; border-radius: 50%; background: linear-gradient(135deg, #667eea, #764ba2); display: flex; align-items: center; justify-content: center; color: white; font-weight: 700; font-size: 16px;">
                                            @user.Username.Substring(0, 1).ToUpper()
                                        </div>
                                        <div>
                                            <div class="username-text" style="font-weight: 700;">@user.Username</div>
                                            <div class="user-id-text" style="font-size: 12px;">ID: @user.Id</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="nama-text" style="font-weight: 600;">@user.NamaLengkap</div>
                                </td>
                                <td style="text-align: center;">
                                    <span class="role-badge @(user.Role == "Admin" ? "role-admin" : "role-user")">
                                        <i class="bi @(user.Role == "Admin" ? "bi-shield-fill-check" : "bi-person-fill")"></i>
                                        @user.Role
                                    </span>
                                </td>
                                <td>
                                    <div class="plant-text" style="font-size: 13px;">
                                        <div><i class="bi bi-building"></i> @user.Plant</div>
                                        <div style="margin-top: 4px;"><i class="bi bi-people"></i> @user.Grup</div>
                                    </div>
                                </td>
                                <td style="text-align: center;">
                                    <span class="status-badge @(user.IsActive ? "status-active" : "status-inactive")">
                                        <i class="bi @(user.IsActive ? "bi-check-circle-fill" : "bi-x-circle-fill")"></i>
                                        @(user.IsActive ? "Aktif" : "Nonaktif")
                                    </span>
                                </td>
                                <td class="date-text" style="text-align: center; font-size: 13px;">
                                    <div><i class="bi bi-calendar"></i> @user.TanggalDibuat.ToString("dd MMM yyyy")</div>
                                    <div style="margin-top: 4px; font-size: 11px;">@user.TanggalDibuat.ToString("HH:mm")</div>
                                </td>
                                <td style="text-align: center;">
                                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn-icon-desktop" title="Edit">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn-icon-desktop btn-danger" title="Hapus">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </td>
                            </tr>
                            no++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Create User Modal -->
<div class="modal fade" id="createUserModal" tabindex="-1" aria-labelledby="createUserModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content" style="border-radius: 16px; border: none; box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);">
            <div class="modal-header" style="color: white; border-radius: 16px 16px 0 0; padding: 24px;">
                <h5 class="modal-title" id="createUserModalLabel" style="font-weight: 700; font-size: 20px;">
                    <i class="bi bi-person-plus-fill"></i> Tambah User Baru
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="createUserForm" asp-action="Create" method="post">
                <div class="modal-body" style="padding: 32px;">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <!-- Username -->
                    <div class="mb-3">
                        <label class="form-label" style="font-weight: 600; margin-bottom: 8px;">
                            <i class="bi bi-person-badge"></i> Username
                        </label>
                        <input type="text" name="Username" class="form-control" placeholder="Masukkan username" required 
                               style="padding: 12px; border-radius: 8px; font-size: 15px;" />
                        <small style="font-size: 12px; display: block; margin-top: 6px;">
                            <i class="bi bi-info-circle"></i> Username digunakan untuk login
                        </small>
                    </div>

                    <!-- Password -->
                    <div class="mb-3">
                        <label class="form-label" style="font-weight: 600; margin-bottom: 8px;">
                            <i class="bi bi-lock-fill"></i> Password
                        </label>
                        <input type="password" name="Password" class="form-control" placeholder="Masukkan password" required 
                               style="padding: 12px; border-radius: 8px; font-size: 15px;" />
                        <small style="font-size: 12px; display: block; margin-top: 6px;">
                            <i class="bi bi-info-circle"></i> Minimal 6 karakter
                        </small>
                    </div>

                    <!-- Nama Lengkap -->
                    <div class="mb-3">
                        <label class="form-label" style="font-weight: 600; margin-bottom: 8px;">
                            <i class="bi bi-person-fill"></i> Nama Lengkap
                        </label>
                        <input type="text" name="NamaLengkap" class="form-control" placeholder="Masukkan nama lengkap" required 
                               style="padding: 12px; border-radius: 8px; font-size: 15px;" />
                    </div>

                    <!-- Role -->
                    <div class="mb-3">
                        <label class="form-label" style="font-weight: 600; margin-bottom: 8px;">
                            <i class="bi bi-shield-fill-check"></i> Role
                        </label>
                        <select name="Role" class="form-control" required 
                                style="padding: 12px; border-radius: 8px; font-size: 15px;">
                            <option value="">-- Pilih Role --</option>
                            <option value="Admin">Admin</option>
                            <option value="User">User</option>
                        </select>
                        <small style="font-size: 12px; display: block; margin-top: 6px;">
                            <i class="bi bi-info-circle"></i> Admin: Full access | User: Input data only
                        </small>
                    </div>

                    <div class="row">
                        <!-- Plant -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label" style="font-weight: 600; margin-bottom: 8px;">
                                <i class="bi bi-building"></i> Plant
                            </label>
                            <input type="text" name="Plant" class="form-control" placeholder="Contoh: Plant 1" required 
                                   style="padding: 12px; border-radius: 8px; font-size: 15px;" />
                        </div>

                        <!-- Grup -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label" style="font-weight: 600; margin-bottom: 8px;">
                                <i class="bi bi-people-fill"></i> Grup
                            </label>
                            <input type="text" name="Grup" class="form-control" placeholder="Contoh: Production" required 
                                   style="padding: 12px; border-radius: 8px; font-size: 15px;" />
                        </div>
                    </div>

                    <!-- Status -->
                    <div class="mb-3">
                        <label class="form-label" style="font-weight: 600; margin-bottom: 12px;">
                            <i class="bi bi-toggle-on"></i> Status
                        </label>
                        <div style="display: flex; gap: 24px;">
                            <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                                <input type="radio" name="IsActive" value="true" checked style="width: 18px; height: 18px; accent-color: #3b82f6;" />
                                <span style="color: #86efac; font-weight: 600;">
                                    <i class="bi bi-check-circle-fill"></i> Aktif
                                </span>
                            </label>
                            <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                                <input type="radio" name="IsActive" value="false" style="width: 18px; height: 18px; accent-color: #dc2626;" />
                                <span style="color: #fca5a5; font-weight: 600;">
                                    <i class="bi bi-x-circle-fill"></i> Nonaktif
                                </span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer" style="padding: 20px 32px;">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="padding: 12px 24px; border-radius: 8px; font-weight: 600;">
                        <i class="bi bi-x-circle"></i> Batal
                    </button>
                    <button type="submit" class="btn btn-primary" style="padding: 12px 24px; border-radius: 8px; font-weight: 600; border: none;">
                        <i class="bi bi-check-circle-fill"></i> Simpan User
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Confirm seed users
    function confirmSeedUsers() {
        if (typeof toast !== 'undefined') {
            toast.confirm(
            'Ini akan menghapus semua user (kecuali Administrator) dan membuat 40 user baru sesuai template.<br><br>Data user lama akan hilang permanen. Lanjutkan?',
            function() {
                window.location.href = '@Url.Action("SeedUsers", "User")';
            }
            );
        } else {
            if (confirm('Ini akan menghapus semua user (kecuali Administrator) dan membuat 40 user baru sesuai template. Lanjutkan?')) {
                window.location.href = '@Url.Action("SeedUsers", "User")';
            }
        }
    }

    // Show TempData messages as toast after page loaded
    window.addEventListener('load', function() {
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
            if (typeof toast !== 'undefined') {
                toast.success('@TempData["SuccessMessage"]');
            }
            </text>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <text>
            if (typeof toast !== 'undefined') {
                toast.error('@TempData["ErrorMessage"]');
            }
            </text>
        }
    });

    // Search functionality
    document.getElementById('searchInput').addEventListener('input', function(e) {
        filterTable();
    });
    
    document.getElementById('roleFilter').addEventListener('change', function() {
        filterTable();
    });
    
    document.getElementById('statusFilter').addEventListener('change', function() {
        filterTable();
    });
    
    function filterTable() {
        const searchText = document.getElementById('searchInput').value.toLowerCase();
        const roleFilter = document.getElementById('roleFilter').value;
        const statusFilter = document.getElementById('statusFilter').value;
        
        const rows = document.querySelectorAll('.user-row');
        
        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            const role = row.dataset.role;
            const status = row.dataset.status;
            
            const matchSearch = text.includes(searchText);
            const matchRole = !roleFilter || role === roleFilter;
            const matchStatus = !statusFilter || status === statusFilter;
            
            row.style.display = (matchSearch && matchRole && matchStatus) ? '' : 'none';
        });
    }
    
    // Handle form submission with AJAX
    document.getElementById('createUserForm').addEventListener('submit', function(e) {
        e.preventDefault();
        
        const formData = new FormData(this);
        const submitBtn = this.querySelector('button[type="submit"]');
        const originalBtnText = submitBtn.innerHTML;
        
        // Disable button and show loading
        submitBtn.disabled = true;
        submitBtn.innerHTML = '<i class="bi bi-hourglass-split"></i> Menyimpan...';
        
        fetch(this.action, {
            method: 'POST',
            body: formData
        })
        .then(response => {
            if (response.ok) {
                // Close modal
                const modal = bootstrap.Modal.getInstance(document.getElementById('createUserModal'));
                modal.hide();
                
                // Reset form
                this.reset();
                
                // Show success message and reload
                if (typeof toast !== 'undefined') {
                    toast.success('User berhasil ditambahkan!');
                    setTimeout(() => location.reload(), 1500);
                } else {
                    location.reload();
                }
            } else {
                return response.text().then(text => {
                    throw new Error('Error creating user: ' + text);
                });
            }
        })
        .catch(error => {
            console.error('Error:', error);
            if (typeof toast !== 'undefined') {
                toast.error('Gagal menambahkan user. Pastikan username belum digunakan.');
            } else {
                alert('Gagal menambahkan user. Pastikan username belum digunakan.');
            }
            
            // Re-enable button
            submitBtn.disabled = false;
            submitBtn.innerHTML = originalBtnText;
        });
    });
    
    // Reset form when modal is closed
    document.getElementById('createUserModal').addEventListener('hidden.bs.modal', function () {
        document.getElementById('createUserForm').reset();
    });
</script>
