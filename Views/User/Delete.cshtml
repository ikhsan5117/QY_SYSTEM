@model User
@{
    ViewData["Title"] = "Hapus User";
    Layout = "_LayoutDesktop";
}

<div class="row g-4">
    <div class="col-12">
        <!-- Header with Back Button -->
        <div style="display: flex; align-items: center; gap: 16px; margin-bottom: 24px;">
            <a asp-action="Index" class="btn-icon-desktop" style="background: #f1f5f9;">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h2 style="margin: 0; font-size: 24px; color: #dc2626; font-weight: 700;">
                    <i class="bi bi-exclamation-triangle-fill"></i> Konfirmasi Hapus User
                </h2>
                <p style="margin: 0; font-size: 14px; color: #64748b;">Pastikan data yang akan dihapus sudah benar</p>
            </div>
        </div>

        <!-- Confirmation Card -->
        <div style="background: #ffffff; border: 2px solid #fecaca; border-radius: 12px; overflow: hidden; max-width: 700px;">
            
            <!-- Warning Banner -->
            <div style="background: linear-gradient(135deg, #dc2626, #991b1b); padding: 24px; color: white;">
                <div style="display: flex; align-items: center; gap: 16px;">
                    <div style="width: 60px; height: 60px; border-radius: 50%; background: rgba(255,255,255,0.2); display: flex; align-items: center; justify-content: center; font-size: 28px; border: 3px solid rgba(255,255,255,0.3);">
                        <i class="bi bi-trash-fill"></i>
                    </div>
                    <div>
                        <div style="font-size: 20px; font-weight: 700; margin-bottom: 4px;">Hapus User</div>
                        <div style="font-size: 14px; opacity: 0.9;">Data yang sudah dihapus tidak dapat dikembalikan</div>
                    </div>
                </div>
            </div>

            <!-- User Details -->
            <div style="padding: 32px;">
                <div style="background: #fef2f2; border: 2px solid #fee2e2; border-radius: 12px; padding: 20px; margin-bottom: 24px;">
                    <p style="margin: 0 0 16px 0; font-weight: 600; color: #991b1b; font-size: 15px;">
                        <i class="bi bi-exclamation-circle-fill"></i> Apakah Anda yakin ingin menghapus user berikut?
                    </p>
                    
                    <div style="display: grid; gap: 12px;">
                        <div style="display: flex; gap: 12px;">
                            <span style="font-weight: 600; color: #64748b; min-width: 120px;">Username:</span>
                            <span style="font-weight: 700; color: #1e293b;">@Model.Username</span>
                        </div>
                        <div style="display: flex; gap: 12px;">
                            <span style="font-weight: 600; color: #64748b; min-width: 120px;">Nama Lengkap:</span>
                            <span style="font-weight: 700; color: #1e293b;">@Model.NamaLengkap</span>
                        </div>
                        <div style="display: flex; gap: 12px;">
                            <span style="font-weight: 600; color: #64748b; min-width: 120px;">Role:</span>
                            <span style="padding: 4px 12px; border-radius: 6px; font-weight: 600; font-size: 13px; background: @(Model.Role == "Admin" ? "#dbeafe" : "#f3e8ff"); color: @(Model.Role == "Admin" ? "#1e40af" : "#6b21a8");">
                                <i class="bi @(Model.Role == "Admin" ? "bi-shield-fill-check" : "bi-person-fill")"></i>
                                @Model.Role
                            </span>
                        </div>
                        <div style="display: flex; gap: 12px;">
                            <span style="font-weight: 600; color: #64748b; min-width: 120px;">Plant / Grup:</span>
                            <span style="color: #475569;">@Model.Plant / @Model.Grup</span>
                        </div>
                        <div style="display: flex; gap: 12px;">
                            <span style="font-weight: 600; color: #64748b; min-width: 120px;">Status:</span>
                            <span style="padding: 4px 12px; border-radius: 6px; font-weight: 600; font-size: 13px; background: @(Model.IsActive ? "#d1fae5" : "#fee2e2"); color: @(Model.IsActive ? "#059669" : "#dc2626");">
                                <i class="bi @(Model.IsActive ? "bi-check-circle-fill" : "bi-x-circle-fill")"></i>
                                @(Model.IsActive ? "Aktif" : "Nonaktif")
                            </span>
                        </div>
                        <div style="display: flex; gap: 12px;">
                            <span style="font-weight: 600; color: #64748b; min-width: 120px;">Tanggal Dibuat:</span>
                            <span style="color: #475569;">@Model.TanggalDibuat.ToString("dd MMMM yyyy, HH:mm")</span>
                        </div>
                    </div>
                </div>

                <!-- Delete Form -->
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    
                    <div style="display: flex; gap: 12px;">
                        <button type="submit" class="btn-danger" style="flex: 1; background: #dc2626; color: white; border: none; padding: 14px; border-radius: 8px; font-weight: 600; cursor: pointer; display: flex; align-items: center; justify-content: center; gap: 8px; transition: all 0.2s;">
                            <i class="bi bi-trash-fill"></i> Ya, Hapus User
                        </button>
                        <a asp-action="Index" class="btn-secondary-desktop" style="flex: 1; text-align: center; background: #f1f5f9; color: #475569;">
                            <i class="bi bi-x-circle"></i> Batal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-danger:hover {
        background: #991b1b !important;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(220, 38, 38, 0.3);
    }
</style>
